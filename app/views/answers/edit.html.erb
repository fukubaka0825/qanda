<div>
    <h2>回答編集画面</h2>
    <%= form_with model:[@question,@answer],local: true do |f| %>
    <div class="form-group">
        <div class="form-group">
            <label>名前</label>
            <%= f.text_field :name,class: 'form-control' %>
        </div>
         <div class="form-group">
            <label>回答</label>
            <%= f.text_area :content,class: 'form-control' %>
        </div>
        <div class="text-center">
            <%= f.submit "編集",class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>