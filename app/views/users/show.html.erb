<div class = "row">
   <div class = "col-md-6 offset-md-3">
      <h1><%= @user.name %>さんのページ</h1>
     <table class = "table table-striped">
       <tr>
         <td>アイコン</td>
         <td><%= gravatar_for @user %></td>
       <tr>
         <td>名前</td>
         <td><%= @user.name %></td>
       </tr>
       <tr>
         <td>自己紹介</td>
         <td>
        <% if @user.profile.present? %>
         <%= simple_format(@user.profile) %>
         <% end %>
         </td>
       </tr>
    </table>
  </div>
</div>
